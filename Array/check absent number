import java.util.Arrays;
import java.util.HashSet;
class HelloWorld {
    public static int test(int arr[]){
        int n = arr.length;
        boolean check = false;
        for(int i=0;i<n;i++)
        {
            if(arr[i]<0)
            {
             check=true;   
            }
        }
        if(check)
        {
        return 1;
        }
        else{
            System.out.print(" else starts");
            Arrays.sort(arr);
            HashSet<Integer> set = new HashSet<>();
            for(int a: arr){
                set.add(a);
            }
            int first = arr[0];
            for(int j=0;j<n+1;j++){
            if(set.add(++first))
            return first;
            }
             System.out.print(" else ends");
        }
        return 0;
    }
    public static void main(String[] args) {
        int arr[] = {-1, -3};
        // 1 1 2 3 4 
        System.out.println(test(arr));
    }
}